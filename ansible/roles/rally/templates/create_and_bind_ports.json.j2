{
    "version": 2,
    "title": "Create and bind port",
    "subtasks": [{
        "title": "Create and bind port",
        "workloads": [{
            "name": "OvnNetwork.create_and_bind_ports",
            "args": {
                "network_create_args": {
                    "amount": {{ network_number }},
                    "batch": 1,
                    "start_cidr": "{{ network_start_cidr }}",
                    "physical_network": "providernet"
                },
                "port_create_args" : {
                    "batch": 1
                },
                "ports_per_network": {{ ports_per_network }},
                "port_bind_args": {
                    "wait_up": true,
                }
            },
            "runner": {
                "type": "serial","times": 1},
            "context": {
               "ovn_multihost" : {
                    "controller": "ovn-controller-node"
                },
                "sandbox":{ "tag": "ToR1"}
            }
        }]
    }]
}
